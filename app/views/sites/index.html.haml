.row
  = form_tag sites_path, method: :get do
    .control-group
      .input-group
        = text_field_tag :query, params[:query], class: 'form-control', placeholder: 'Search sites by domain, bookmark title or tags..'
        %span.input-group-btn
          = submit_tag nil, :class => 'btn btn-primary'
.row
  .page-header
    %h1
      = @header
.row{style: 'padding-top:50px;'}
  - @sites.each do |site|
    = link_to site.domain + " (#{site.bookmarks.count})", site_path(site), class:'lead'
    %br