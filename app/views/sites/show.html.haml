.page-header
  %h1
    = best_in_place @site, :domain

.form-actions
  = link_to t('.destroy', :default => t("helpers.links.destroy")), site_path(@site), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure? This will permanently delete the site and all bookmarks associated with it')) }, :class => 'btn btn-danger'
%br
%br
.row
  .to_mason
    = render @site.bookmarks
.clearfix
