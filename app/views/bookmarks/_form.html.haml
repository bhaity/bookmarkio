= form_for @bookmark, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :tag_list, :class => 'control-label'
    .controls
      = f.text_field :tag_list, :class => 'text_field'
  / .control-group
  /   = f.label :title, :class => 'control-label'
  /   .controls
  /     = f.text_field :title, :class => 'text_field'
  / .control-group
  /   = f.label :description, :class => 'control-label'
  /   .controls
  /     = f.text_field :description, :class => 'text_field'
  / .control-group
  /   = f.label :keywords, :class => 'control-label'
  /   .controls
  /     = f.text_field :keywords, :class => 'text_field'
  .control-group
    = f.label :url, :class => 'control-label'
    .controls
      = f.text_field :url, :class => 'text_field'
  / .control-group
  /   = f.label :short_url, :class => 'control-label'
  /   .controls
  /     = f.text_field :short_url, :class => 'text_field'
  / .control-group
  /   = f.label :image_url, :class => 'control-label'
  /   .controls
  /     = f.text_field :image_url, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), bookmarks_path, :class => 'btn'
