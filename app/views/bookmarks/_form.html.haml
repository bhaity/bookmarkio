= form_for(@bookmark, :html => { :class => 'form-horizontal' }) do |f|
  .control-group
    .input-group
      = f.text_field :url, class: 'form-control', placeholder: 'Place or drag a URL..'
      %span.input-group-btn
        = f.submit nil, :class => 'btn btn-primary'
  %br
  %br
  .control-group
    = f.label :tag_list, :class => 'control-label'
    .controls
      = f.text_field :tag_list, class: 'tag-select', placeholder: "Enter tags", data: { saved: f.object.tags.map{|t| {id: t.name, name: t.name}}.to_json, url: autocomplete_tags_path }
      =# f.text_field :tag_list, :class => 'text_field', id: 'tags_text_field'
  