= form_for(@bookmark, :html => { :class => 'form-horizontal' }) do |f|
  .control-group
    = f.text_field :url, class: 'form-control', placeholder: 'Paste or drag a URL to create a bookmark..'
  %br
  %br
  .control-group
    = f.label 'Add tags:' 
    .controls
      = f.text_field :tag_list, class: 'tag-select', placeholder: "Enter tags", data: { saved: f.object.tags.map{|t| {id: t.name, name: t.name}}.to_json, url: autocomplete_tags_path }
      %small
        Additional tags will be pulled from the site's metadata.

  %br
    %span.input-group-btn
    = f.submit nil, :class => 'btn btn-orange'
  