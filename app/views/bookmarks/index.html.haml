.to-mason
  = render @bookmarks
.clearfix
/ - model_class = Bookmark
/ .page-header
/   %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
/ %table.table.table-striped
/   %thead
/     %tr
/       %th= model_class.human_attribute_name(:id)
/       %th= model_class.human_attribute_name(:title)
/       %th= model_class.human_attribute_name(:description)
/       %th= model_class.human_attribute_name(:keywords)
/       %th= model_class.human_attribute_name(:url)
/       %th= model_class.human_attribute_name(:short_url)
/       %th= model_class.human_attribute_name(:image_url)
/       %th= model_class.human_attribute_name(:created_at)
/       %th=t '.actions', :default => t("helpers.actions")
/   %tbody
/     - @bookmarks.each do |bookmark|
/       %tr
/         %td= link_to bookmark.id, bookmark_path(bookmark)
/         %td= bookmark.title
/         %td= bookmark.description
/         %td= bookmark.keywords
/         %td= bookmark.url
/         %td= bookmark.short_url
/         %td= bookmark.image_url
/         %td=l bookmark.created_at
/         %td
/           = link_to t('.edit', :default => t("helpers.links.edit")), edit_bookmark_path(bookmark), :class => 'btn btn-mini'
/           = link_to t('.destroy', :default => t("helpers.links.destroy")), bookmark_path(bookmark), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

/ = link_to t('.new', :default => t("helpers.links.new")), new_bookmark_path, :class => 'btn btn-primary'
