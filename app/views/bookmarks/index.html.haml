.row
  = form_tag bookmarks_path, method: :get do
    .control-group
      .input-group
        = text_field_tag :query, params[:query], class: 'form-control', placeholder: 'Search bookmarks by title, description or tags..'
        %span.input-group-btn
          = submit_tag nil, :class => 'btn btn-primary'
.row
  .page-header
    %h1
      = @header
.row
  #tag_cloud
    - tag_cloud Bookmark.tag_counts, %w{s m l} do |tag, css_class|
      =link_to(tag.name, tag_path(tag.name), class: css_class)
%br
.row
  .to-mason
    = render @bookmarks
  .clearfix
